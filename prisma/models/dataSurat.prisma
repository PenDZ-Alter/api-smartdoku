model DataSurat {
  id                String          @id @default(cuid())
  nomor_urut        Int             @unique @default(autoincrement())
  nama_surat        String          @db.Text
  tanggal_diterima  DateTime        @db.Date
  tanggal_surat     DateTime        @db.Date
  kode              String          @unique
  no_agenda         String          @unique
  no_surat          String          @unique
  hal               String          @db.Text
  tanggal_waktu     DateTime
  tempat            String
  disposisi         Json?
  index             String?
  pengolah          String
  sifat             String?
  link_scan         String?
  disp_1            DateTime        @db.Date
  disp_2            DateTime        @db.Date
  disp_3            DateTime?       @db.Date
  disp_4            DateTime?       @db.Date
  disp_1_notes      String?         @db.Text
  disp_2_notes      String?         @db.Text
  disp_3_notes      String?         @db.Text
  disp_4_notes      String?         @db.Text
  disp_lanjut       DispLanjutan?
  tindak_lanjut_1   DateTime?       @db.Date
  tindak_lanjut_2   DateTime?       @db.Date
  tl_notes_1        String?         @db.Text
  tl_notes_2        String?         @db.Text
  status            Status          @default(Proses)
  timestamp         DateTime
}
